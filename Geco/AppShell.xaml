<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Geco.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Geco.Views"
       Shell.BackgroundColor="{AppThemeBinding Light={StaticResource ContainerLight}, Dark={StaticResource ContainerDark}}"
       Title="Geco">
    <Shell.TitleView>
        <Label HorizontalOptions="Start"
               VerticalOptions="Center"
               FontFamily="Poppins"
               FontSize="Title"
               TextColor="{AppThemeBinding Light={StaticResource ContainerTextLight}, Dark={StaticResource ContainerTextDark}}"
               Text="Geco" />
    </Shell.TitleView>
    <FlyoutItem Title="Chat">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:ChatPage}"
                          Title="Geco" />
        </Tab>
    </FlyoutItem>
</Shell>
